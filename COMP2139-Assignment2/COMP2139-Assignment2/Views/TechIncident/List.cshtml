@model Incident
@{
    ViewBag.Title = "List Incidents for Technician";
}

<h1>Customer: @ViewBag.TechName</h1>

<h2>Assigned/Open Incidents</h2>
<table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Customer</th>
                <th scope="col">Product</th>
                <th scope="col">Date Opened</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Incident incident in ViewBag.Incidents)
            {
            <tr>
                <td scope="row">@incident.Title</td>
                <td scope="row">@incident.Customer.FullName</td>
                <td scope="row">@incident.Product.Name</td>
                <td scope="row">@incident.DateOpened</td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="TechIncident"
                       asp-action="Edit"
                       asp-route-id="@incident.Id"
                       role="button">Edit</a>
                </td>
            </tr>
            }
        </tbody>
</table>

<a asp-action="Get" asp-controller="TechIncident" class="btn btn-primary">Switch Technician</a>
    