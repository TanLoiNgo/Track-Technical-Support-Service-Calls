@model IEnumerable<Product>
@{
    ViewBag.Title = "Product";
}
@* show any message in TempData *@
@if (TempData["message"] != null)
{
    <h4 class="bg-warning text-xl-center my-2 p-2  text-capitalize">@TempData["message"]</h4>
}

<h1>Product Manager</h1>
<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Release Date</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <th scope="row">@product.Code</th>
                    <td>@product.Name</td>
                    <td>$@product.YearlyPrice</td>
                    <td>@product.ReleasedDate</td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Edit"
                           asp-controller="Product"
                           asp-route-id="@product.Id"
                           role="button">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Delete"
                           asp-controller="Product"
                           asp-route-id="@product.Id"
                           role="button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a role="button" asp-action="Add" class="btn btn-primary" asp-controller="Product">Add Product</a>
</div>