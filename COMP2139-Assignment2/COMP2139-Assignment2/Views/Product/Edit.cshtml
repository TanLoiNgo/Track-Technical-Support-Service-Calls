@model Product
@{
    string title = ViewBag.Action + " Product";
    ViewBag.Title = title;
 @Html.ValidationSummary(false,"",new { @class="text-danger"})
}

<h1>@title</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Code">Code</label>
        <input asp-for="Code" type="text" class="form-control" id="code" placeholder="Enter product code">
        <p class="text-danger">@Html.ValidationMessageFor(model => model.Code)</p>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter product name">
        <p class="text-danger">@Html.ValidationMessageFor(model => model.Name)</p> 
    </div>
    <div class="form-group">
        <label asp-for="YearlyPrice">Yearly Price</label>
        <input asp-for="YearlyPrice"  class="form-control" id="yearlyPrice" placeholder="Enter product yearly price">
        <p class="text-danger">@Html.ValidationMessageFor(model => model.YearlyPrice)</p>

       

    </div>
    <div class="form-group">
        <label asp-for="ReleasedDate">Released Date</label>
        <input asp-for="ReleasedDate" type="datetime" class="form-control" id="releasedDate" value="@DateTime.Now">
        <p class="text-danger">@Html.ValidationMessageFor(model => model.ReleasedDate)</p>

    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Cancel</a>
</form>
