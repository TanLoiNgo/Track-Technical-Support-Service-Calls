@model Technician
@{
    string title = ViewBag.Action + " Technician";
    ViewBag.Title = title;
}

<h1>@title</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name"
               placeholder="Enter technician's name">
        <p class="text-danger">@Html.ValidationMessageFor(model => model.Name)</p>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="text" class="form-control" id="email"
               placeholder="Enter technician's email">
        <p class="text-danger">@Html.ValidationMessageFor(model => model.Email)</p>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" type="text" class="form-control" id="phone"
               placeholder="Enter technician's phone">
        <p class="text-danger">@Html.ValidationMessageFor(model => model.Phone)</p>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Technician" class="btn btn-primary">Cancel</a>
</form>
